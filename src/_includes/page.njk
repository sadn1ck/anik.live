{% set isHome = (page.url === '/') %}
<!DOCTYPE html>
<html lang="en">
	<head>
		{% include 'components/meta.njk' %}
		<title>{{ 'Home' if isHome else title }} - Anik Das</title>
		<style>
			{% cssBundle %}
		</style>
	</head>
	<body>
		<a class="skip-link sr-only" href="#content">Skip to content</a>
		<div class="container">
			{% if not isHome %}
				<div class="layout--header">
					<a class="text--small" href="/">‚Üê Back home</a>
					{% if date %}{% include 'components/date.njk' %}
					{% endif %}
				</div>
			{% endif %}
			<main>
				{% if img %}{% include 'components/picture.njk' %}
				{% endif %}
				<div class="content" id="content">
					<h1>{{title}}</h1>
					<blockquote>{{summary}}</blockquote>
					{{content | safe}}
					{% if isHome %}
						{% include 'components/experience.njk' %}
					{% endif %}
					{% if isHome %}
						{% include 'components/posts.njk' %}
					{% endif %}
				</div>
			</main>
			{% include 'components/footer.njk' %}
		</div>
	</body>
</html>